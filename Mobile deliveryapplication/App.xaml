<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Mobile_deliveryapplication.Models"
             x:Class="Mobile_deliveryapplication.App">

    <Application.Resources>
        <ResourceDictionary>

            <models:BerichtUitlijningConverter x:Key="BerichtUitlijningConverter" />
            <models:BerichtKleurConverter x:Key="BerichtKleurConverter" />
            <models:BerichtTekstKleurConverter x:Key="BerichtTekstKleurConverter" />
            <models:BerichtMarginConverter x:Key="BerichtMarginConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
