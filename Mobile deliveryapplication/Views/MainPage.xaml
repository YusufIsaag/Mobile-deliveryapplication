<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_deliveryapplication.Views.MainPage"
             Title="Matrix Inc."
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             BackgroundColor="#293335">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="DarkCyan" StatusBarStyle="LightContent"/>
    </Page.Behaviors>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">
            <Label
                Text="Nieuws"
                TextColor="White"
                FontSize="18"
                FontAttributes="None"
                HorizontalOptions="Start" />

            <Border 
                HeightRequest="200"
                BackgroundColor="darkslategrey"
                Stroke="White"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 20, 10, 0, 40">
                <VerticalStackLayout Padding="15" Spacing="8">
                    <Label Text="Nieuwe bezorgroute actief in regio Limburg" 
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Vanaf volgende week is de nieuwe route naar Roermond actief. Controleer je planning in de app."
                           TextColor="White"
                           FontSize="13"/>
                </VerticalStackLayout>
            </Border>

            <Border 
                HeightRequest="200"
                BackgroundColor="darkslategrey"
                Stroke="White"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 20, 10, 0, 40">
                <VerticalStackLayout Padding="15" Spacing="8">
                    <Label Text="Bezorger van de maand: Ahmed uit Maastricht" 
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Gefeliciteerd Ahmed! Hij behaalde een gemiddelde beoordeling van 4.9 sterren. Goed bezig!"
                           TextColor="White"
                           FontSize="13"/>
                </VerticalStackLayout>
            </Border>

            <Border 
                HeightRequest="200"
                BackgroundColor="darkslategrey"
                Stroke="White"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 20, 10, 0, 40">
                <VerticalStackLayout Padding="15" Spacing="8">
                    <Label Text="Doe mee: win een cadeaubon met onze zomeractie!" 
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Lever deze maand 50 pakketten of meer af en maak kans op een cadeaubon t.w.v. â‚¬50,-."
                           TextColor="White"
                           FontSize="13"/>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button 
                    Text="Laatste leveringen"
                    Clicked="OnLastDeliveriesClicked"
                    BackgroundColor="DarkCyan"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="200"
                    HeightRequest="50" />

                <Button 
                    Text="Bekijk pakketstatus"
                    Clicked="OnViewStatusClicked"
                    BackgroundColor="DarkCyan"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="200"
                    HeightRequest="50" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>



